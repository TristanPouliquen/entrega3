{% extends "base.html.twig" %}

{% block content %}
  
<div class="container">
  <div class="row page-title text-center wow bounce"  data-wow-delay="1s">
    <h5>Inscribirse</h5>
    <h2><span>Bienvenido</span></h2>
  </div>
</div>

<p></p>
<p></p>
<p></p>
<p></p>
<p></p>


  <form action="{{ path('signup') }}" method="post" class="form-login center">
    {% if error %}
    <div class="alert alert-error">{{ error|nl2br }}</div>
    {% endif %}

    <div class="form-group">
      {{ form_errors(form.username) }}
      <div class="input-group">
        {{ form_label(form.username, 'Correo') }}
        {{ form_widget(form.username, {attr: {'class': 'form-control'}}) }}
      </div>
    </div>

    <div class="form-group">
      {{ form_errors(form.plainPassword) }}
      <div class="input-group">
        {{ form_label(form.plainPassword, 'Contrasena') }}
        {{ form_widget(form.plainPassword, {attr: {'class': 'form-control'}}) }}
      </div>
    </div>

    {{ form_widget(form, 'Validar') }}
    <input type="submit" name="submit" />
  </form>
{% endblock %}
