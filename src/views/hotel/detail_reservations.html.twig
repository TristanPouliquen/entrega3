{% extends 'base.html.twig' %}
{% block content %}

 <div class="row page-title text-center wow bounce"  data-wow-delay="1s">
    <h5>Las reservas </h5>
    <h2><span>{{ hotel.reservations|length }}</span> reservas</h2>
    
  </div>

 <div class="row jobs">
    <div class="col-md-12">
      <div class="job-posts table-responsive">
        <table class="table">
          {% for reservation in hotel.reservations %}
          <tr class="odd wow fadeInUp" data-wow-delay="1s">
            <td class="tbl-logo"><img src="{{ asset('logohotel.png', 'images') }}" alt="" height="50" width="45"></td>
            <td class="tbl-title"><h4>a<br><span class="job-type"> {{reservation.arrival|date('d/m/Y')}} -  reservation.duration</span></h4></td>
            <td><p><i class="icon-location"></i> facilicity</p></td>
          </tr>
          {% endfor %}
        </table>
      </div>
    </div>
  </div>


{# list of reservations details #}
{% endblock %}
