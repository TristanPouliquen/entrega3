{% extends 'base.html.twig' %}
{% block content %}
<div class="row">
  <div class="col-md-12">
    <form class="form" method="POST" action="{{ path('hotel_reserve', {'id': hotel.id }) }}">
      <div class="form-group">
        {{ form_widget(form.clientName, {'class': 'form-control'})}}
      </div>
      <div class="form-group">
        {{ form_widget(form.phoneNumber, {'class': 'form-control'})}}
      </div>
      <div class="form-group">
        {{ form_widget(form.date, {'class': 'form-control'})}}
      </div>
      <div class="form-group">
        {{ form_widget(form.time, {'class': 'form-control'})}}
      </div>
      <div class="form-group">
        {{ form_widget(form.quantity, {'class': 'form-control'})}}
      </div>
      <div class="form-group">
        {{ form_widget(form.submit, {'label': 'Reservar'
      , 'class': 'btn btn-success'}) }}
      </div>
      <div class="form-group">
        {{ form_widget(form) }}
      </div>
    </form>
  </div>
</div>
{% endblock %}
