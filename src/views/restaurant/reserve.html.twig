{% extends 'base.html.twig' %}
{% block content %}
<div class="row">
  <div class="col-md-12">
    <form class="form" method="POST" action="{{ path('hotel_reserve', {'id': hotel.id }) }}">
      {{ form_widget(form.clientName)}}
      {{ form_widget(form.phoneNumber)}}
      {{ form_widget(form.date)}}
      {{ form_widget(form.time)}}
      {{ form_widget(form.quantity)}}
      {{ form_widget(form.submit, {'label': 'Reservar'}) }}
      {{ form_widget(form) }}
    </form>
  </div>
</div>
{% endblock %}
